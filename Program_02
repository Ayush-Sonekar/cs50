#include <stdio.h>

int get_input(void);
void print_hash(int n);

int main(void)
{
    int n = get_input();
    print_hash(n);
    return 0;
    
}
int get_input(void)
{
    int n = 0;
    printf("Enter a number: ");
    scanf("%d", &n);
    return n;
}

void print_hash(int n)
{
    for (int i = 1; i <= n; i++)
    {
        // print space
        for (int j = 1; j <= n - i; j++)
        {
            printf(" ");
        }
        for (int k = 1; k <= i; k++)
        {
            printf("#");
        }
        printf(" ");
        
        for (int l = 1; l <= i; l++)
        {
            printf("#");
        }
        
        for (int m = 1; m <= n - i; m++)
        {
            printf(" ");
        }
        printf("\n");
    }
}
